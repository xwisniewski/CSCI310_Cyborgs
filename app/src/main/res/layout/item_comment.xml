<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#F5F5F5"
    android:layout_margin="4dp">

    <!-- Comment Title (Optional) -->
    <TextView
        android:id="@+id/commentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:visibility="gone" />

    <!-- Comment Body -->
    <TextView
        android:id="@+id/commentBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#555555"
        android:layout_marginTop="4dp" />

    <!-- Author and Date Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/commentAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#888888" />

        <TextView
            android:id="@+id/commentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="10sp"
            android:textColor="#AAAAAA" />

        <!-- Vote Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/commentUpvoteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘"
                android:textSize="14sp"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/commentUpvoteCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="10sp"
                android:textColor="#666666"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/commentDownvoteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘Ž"
                android:textSize="14sp"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/commentDownvoteCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="10sp"
                android:textColor="#666666"
                android:layout_marginEnd="8dp" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/editCommentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœï¸ Edit"
            android:textSize="11sp"
            android:textColor="#6200EE"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/deleteCommentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ—‘ï¸"
            android:textSize="11sp"
            android:textColor="#F44336"
            android:layout_marginStart="4dp"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>

